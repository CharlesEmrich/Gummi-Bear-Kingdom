@model IEnumerable<GummiBearKingdom.Models.Product>
@{
    ViewData["Title"] = "Our Products";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    @if (Model.Count() == 0)
    {
        <h3>No Products yet!</h3>
    }
    else
    {
        <ul>
            @foreach (var product in Model)
            {
                <li>
                    @Html.DisplayFor(model => product.Name) |
                    @Html.ActionLink("Edit", "Edit", new { id = product.ProductId }) |
                    @Html.ActionLink("Details", "Details", new { id = product.ProductId }) |
                    @Html.ActionLink("Delete", "Delete", new { id = product.ProductId })
                </li>
            }
        </ul>
    }
</div>
<div>
    @Html.ActionLink("Add a Product", "Create")
</div>